<com.example.loveb.fds.view.StickyNavLayout  xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout
        android:id="@id/id_stickynavlayout_topview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4400ff00" >
        <ViewFlipper
            android:id="@+id/vF_main"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:autoStart="true"
            android:flipInterval="3000">

            <include layout="@layout/scroll_layout" />
            <include layout="@layout/layout2" />
            <include layout="@layout/layout3" />
            <include layout="@layout/layout4" />
        </ViewFlipper>
    </RelativeLayout>

    <com.example.loveb.fds.view.SimpleViewPagerIndicator
        android:id="@id/id_stickynavlayout_indicator"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffffff" >
    </com.example.loveb.fds.view.SimpleViewPagerIndicator>

    <android.support.v4.view.ViewPager
        android:id="@id/id_stickynavlayout_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    </android.support.v4.view.ViewPager>

</com.example.loveb.fds.view.StickyNavLayout >
